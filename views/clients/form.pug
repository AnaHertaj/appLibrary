extends ../layout.pug
//-rellenar bloques de ese layout
block content
    .form
        form(action="/clients/create", method="POST")
            .row
                .col-lg-12
                    h6.my-5.title-form 
                        strong
                            | Add your new client here
            .row
                .col-xs-12.col-sm-6
                    .form-group
                        label Name
                        input.form-control(type="text", name="name")
                    .form-group
                        label Surname
                        input.form-control(type="text", name="surname")
                .col-xs-12.col-sm-6
                    .form-group
                        label Email
                        input.form-control(type="text", name="email")
                    .form-group
                        label Telephone
                        input.form-control(type="text", name="telephone")

                .col-xs-12.col-sm-12
                    .form-group
                        label Address
                        input.form-control(type="textarea", name="address")

            .row
                    
                input.btn.form-control.my-3.btn-block(type="submit", value="SEND")